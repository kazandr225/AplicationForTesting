<Page x:Class="AplicationForTesting.Pages.InfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AplicationForTesting.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InfoPage">

    <Grid>
        <StackPanel Orientation="Vertical" Width="255" Height="220" >
            <TextBlock TextWrapping="Wrap"> Добро пожаловать! Данное приложение предназначено для тестирование учащихся. В практической части вам предстоит выполнить ряд тестов, по окончанию которых будет выствлена оценка. Будьте внимательны!</TextBlock>

            <Button Name="btnBegin" Click="btnBegin_Click">Конкуренция и рыночные структуры</Button>
            <Button Name="btnBack" Click="btnBack_Click">Назад</Button>
        </StackPanel>
    </Grid>
    
    
</Page>
